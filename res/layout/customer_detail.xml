<com.odoo.widgets.parallax.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parallaxScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    odoo:parallax_actionbar_height="?attr/actionBarSize"
    odoo:parallax_overlay_color="@color/theme_primary" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/overlay_top_margin"
        android:background="#ffffff" >

        <FrameLayout
            android:id="@+id/parallax_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-56dp" >

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar" />
        </FrameLayout>

        <TextView
            android:id="@android:id/title"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/parallax_view"
            android:gravity="center_vertical"
            android:paddingLeft="62dp"
            android:paddingRight="24dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <odoo.controls.OForm
            android:id="@+id/odooFormRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="16dp"
            odoo:model="res.partner" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <odoo.controls.OField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        odoo:field_name="name"
                        odoo:field_textAppearance="?android:attr/textAppearanceLarge"
                        odoo:with_label="false" />

                    <odoo.controls.OField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        odoo:field_name="email"
                        odoo:with_label="false" />
                </LinearLayout>
            </LinearLayout>

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                odoo:field_name="address"
                odoo:label_bottom_border_height="1"
                odoo:label_color="@color/odoo_purple"
                odoo:with_label="false" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                odoo:field_name="phone"
                odoo:label_color="@color/odoo_purple" />

            <odoo.controls.OField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                odoo:field_name="website"
                odoo:label_color="@color/odoo_purple" />
        </odoo.controls.OForm>
    </RelativeLayout>

</com.odoo.widgets.parallax.ParallaxScrollView>